{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "target": "ES2022",
    "isolatedModules": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "rootDir": "./",
    "outDir": "../dist/server"
  },
  "include": ["**/*"]
}
